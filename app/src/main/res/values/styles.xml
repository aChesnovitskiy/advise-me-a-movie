<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- FAB colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>


    </style>

    <style name="TopButtonsIcons">
        <item name="android:layout_width">@dimen/height_of_top_buttons_icons</item>
        <item name="android:layout_height">@dimen/height_of_top_buttons_icons</item>
        <item name="android:elevation">7dp</item>
    </style>

    <style name="TopButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_of_top_buttons</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_basic</item>
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:background">@color/white_color</item>
    </style>

    <style name="TopButtonsDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TopTextDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginStart">@dimen/margin_left</item>
        <item name="android:layout_marginEnd">@dimen/margin_right</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_color</item>
    </style>

    <style name="DetailTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_basic</item>
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
